---
import SiteLayout from "../layouts/SiteLayout.astro";
import GreenButton from "../components/GreenButton.astro";
---

<SiteLayout>
  <div class="pt4 flex justify-start items-center ph3 ph5-l">
    <div>
      <h1 class="f1 mv0">404</h1>
      <h2 class="f2 mv0">Oops!</h2>
      <h2 class="f2 mv0">Page Not Found</h2>

      <p class="lh-copy">
        We couldn't find the page you requested. But we can still help you find
        the right candidate for your business.
      </p>

      <GreenButton>Browse Candidates</GreenButton>
    </div>
  </div>
</SiteLayout>

<style is:inline>
  html {
    background-color: white;
  }

  header,
  .mobile-menu {
    background-color: white;
  }
</style>
